@model List<BoublikSystem.Entities.Product>
@{
    ViewBag.Title = "ShowProducts";
}



<body>
<div class="row">

    <br/>
<br/>
    <div class="col-md-6">
        @using (Html.BeginForm("AddNewProduct", "Cook", FormMethod.Get))
             {
                 <input type="submit" value="Новый продукт">
             }
        <h3>Cписок продуктов</h3>
        <table class="table">
            <tr>
                <th>Название продукта
                </th>
                <th>Цена (грн.)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <div>
                            @Html.ActionLink("Изменить", "EditProduct", new {id = item.Id}) |
                            @Html.ActionLink("Удалить", "DeleteProduct", new {id = item.Id})
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
</body>
