<div class="container body-content">
    <script>
        //$(function () {
        //    $("#dialog-modal").dialog({
        //        height: 140,
        //        modal: true
        //    });
        //});
        $(function () {
            $("#dialog-modal").dialog({
                autoOpen: false,
                width: 300,
                height: 250,
                show: {
                    effect: "blind",
                    duration: 1000
                },
                hide: {
                    effect: "explode",
                    duration: 1000
                }
            });

            $("#modal-opener").click(function () {
                $("#dialog-modal").dialog("open");
            });
        });
    </script>
    @RenderBody()
    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - BoublikSystem Application</p>
    </footer>
</div>


    @Scripts.Render("~/bundles/bootstrap")
